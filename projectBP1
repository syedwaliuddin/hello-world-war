pipeline {
    agent none
    stages {
        stage ('build stage') {
            agent {label 'docker'}
            steps {
                sh 'docker build -t mytomimage:${BUILD_NUMBER} --build-arg BUILD_NUMBER=${BUILD_NUMBER} .'
            }
        }
        stage ('publish stage') {
            agent {label 'docker'}
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerhubPassword', usernameVariable: 'dockerhubUser')]) {
                sh 'docker login -u ${dockerhubUser} -p ${dockerhubPassword}'
                sh 'docker tag mytomimage:${BUILD_NUMBER} waliuddin/mytom1:${BUILD_NUMBER}'
                sh 'docker push waliuddin/mytom1:${BUILD_NUMBER}'
                sh 'helm package ./helm/tomcat --version=${BUILD_NUMBER}'
                sh 'curl -uebenneelpinto@gmail.com:Neil12345! -T tomcat-${BUILD_NUMBER}.tgz \"https://ebenneilpinto.jfrog.io/artifactory/helm/tomcat-${BUILD_NUMBER}.tgz\"'
                }
            }
        }
        stage( 'my deploy' ) {
            agent {label 'k8smaster'} 
            steps {
               sh 'helm package ./helm/tomcat --version=${BUILD_NUMBER}'
               sh 'helm repo add helm https://waliuddin8792.jfrog.io/artifactory/api/helm/helm --username waliuddin8792@gmail.com --password Wali@8792'
               sh 'helm repo update'
               sh 'helm repo list'
               sh 'helm upgrade --install mytomcat helm/tomcat --version=${BUILD_NUMBER} --set image=waliuddin/mytom1:${BUILD_NUMBER}'
            }
        }
    }
}
       
